<!-- Rounded switch -->
<label class="switch">
  <input type="checkbox">
  <span class="slider round">
    <img class="light-mode" src="light-mode.png" alt="Light Mode" />
    <img class="dark-mode" src="night-mode.png" alt="Light Mode" />
  </span>
</label>

<style>
  /* The switch - the box around the slider */
  .switch {
    position: relative;
    display: inline-block;
    width: 4em;
    height: 2em;
  }

  /* Hide default HTML checkbox */
  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  /* The slider */
  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: transparent;
    border: 1px solid var(--primary);
    -webkit-transition: .4s;
    transition: .4s;
  }

  .slider img{
    position: absolute;
    width: 1.5em;
    height: 1.5em;
    left: 0.25em;
    bottom: 0.2em;
    -webkit-transition: .4s;
    transition: .4s;
  }

  .slider img.dark-mode{
    opacity: 0;
  }

  .slider img.light-mode{
    opacity: 1;
  }

  input:checked + .slider:before, input:checked + span img{
    -webkit-transform: translateX(2em);
    -ms-transform: translateX(2em);
    transform: translateX(2em);
  }

  input:checked + span img.dark-mode{
    opacity: 1;
  }
  input:checked + span img.light-mode{
    opacity: 0;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 1.5em;
    width: 1.5em;
    right: 0.25em;
    bottom: 0.2em;
    background-color: var(--primary);
    -webkit-transition: .4s;
    transition: .4s;
  }

  input:checked + .slider:before {
    -webkit-transform: translateX(-2em);
    -ms-transform: translateX(-2em);
    transform: translateX(-2em);
  }

  /* Rounded sliders */
  .slider.round {
    border-radius: 34px;
  }

  .slider.round:before {
    border-radius: 50%;
  }
</style>